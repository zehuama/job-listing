<div class="pull-right">
  <%= link_to("Add a job", new_admin_job_path, class: "btn btn-default") %>
</div>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <td>Status | Title</td>
      <td>Content</td>
      <td>Last Update</td>
      <td colspan="2"></td>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td>
          <%= render_job_status(job) %>
          <%= link_to(job.title, admin_job_path(job)) %>
        </td>
        <td><%= job.content %></td>
        <td><%= job.created_at %></td>
        <td>
          <%= link_to("Edit", edit_admin_job_path(job)) %> |
          <%= link_to("Delete", admin_job_path(job), method: :delete, data: {confirm: "Are you sure?"}) %>
          <% if job.is_hidden %>
            <%= link_to("Publish", publish_admin_job_path(job), method: :post, class: "btn btn-xs btn-danger") %>
          <% else %>
            <%= link_to("Hide", hide_admin_job_path(job), method: :post, class: "btn btn-xs btn-default") %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
